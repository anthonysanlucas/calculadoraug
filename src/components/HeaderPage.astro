---
import Logo from '@/components/Logo.astro'
---

<header class="header">
  <div class="header__inner">
    <Logo />

    <nav class="tabs">
      <a href="/" id="partialgradePage" class="tab">Promedio Parcial</a>
      <a href="/calificacion-final/" id="finalgradePage" class="tab">Calificaci√≥n Final</a>
    </nav>
  </div>
</header>

<style>
  .header {
    width: 100%;
    background: var(--bg);
    border-bottom: 1px solid var(--border);
  }

  .header__inner {
    max-width: var(--container);
    margin: 0 auto;
    padding: 16px var(--pad-x);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
  }

  /* Tabs container */
  .tabs {
    display: inline-flex;
    gap: 4px;
    padding: 4px;
    background: var(--surface-2);
    border-radius: 999px; /* pill */
    border: 1px solid var(--border);
  }

  /* Tab */
  .tab {
    position: relative;
    padding: 8px 14px;
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--muted);
    border-radius: 999px;
    text-decoration: none;
    transition:
      background 120ms ease,
      color 120ms ease,
      box-shadow 120ms ease;
  }

  .tab:hover {
    color: var(--text);
  }

  /* Active tab */
  .tab.active {
    background: var(--surface);
    color: var(--text);
    box-shadow: var(--shadow-sm);
  }

  /* Focus (accesibilidad) */
  .tab:focus-visible {
    outline: none;
    box-shadow: var(--ring);
  }
</style>

<script>
  const tabs = {
    '/': document.getElementById('partialgradePage'),
    '/calificacion-final/': document.getElementById('finalgradePage')
  }

  const current = tabs[window.location.pathname]
  if (current) current.classList.add('active')
</script>
