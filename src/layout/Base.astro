---
import HeaderPage from '@/components/HeaderPage.astro'
import FooterPage from '@/components/FooterPage.astro'

interface Props {
  title: string
  description: string
}

const { title, description } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/favicon.svg" />

    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://calculadoraug.live/" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://i.postimg.cc/sgCVrtyH/calculadoraug.png" />
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://calculadoraug.live/" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="https://i.postimg.cc/sgCVrtyH/calculadoraug.png" />

    <!-- Tipografía: puedes mantener Manrope si te gusta -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <HeaderPage />

    <main class="app">
      <div class="container">
        <slot />
      </div>
    </main>

    <FooterPage />
  </body>
</html>

<style is:global>
  :root {
    /* Base (Notion-like) */
    --bg: #fafafa;
    --surface: #ffffff;
    --surface-2: #f6f6f6;
    --accent-color: #00539f;

    --text: #0f172a; /* slate-900 */
    --text-2: #334155; /* slate-700 */
    --muted: #64748b; /* slate-500 */

    --border: #e5e7eb; /* gray-200 */
    --border-2: #d1d5db; /* gray-300 */

    --shadow-sm: 0 1px 2px rgba(15, 23, 42, 0.06);
    --shadow-md: 0 8px 24px rgba(15, 23, 42, 0.08);

    --radius: 14px;
    --radius-sm: 10px;

    --ring: 0 0 0 3px rgba(15, 23, 42, 0.12);

    --container: 980px;
    --pad-x: 20px;

    --font:
      'Manrope', ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial,
      'Apple Color Emoji', 'Segoe UI Emoji';
  }

  /* Normalize básico */
  html {
    line-height: 1.15;
    -webkit-text-size-adjust: 100%;
    scroll-behavior: smooth;
    scroll-padding-top: 4rem;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  body {
    margin: 0;
    font-family: var(--font);
    background: var(--bg);
    color: var(--text);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  main {
    display: block;
  }

  /* Layout */
  .app {
    flex: 1;
    padding: 28px 0 48px;
  }

  .container {
    width: 100%;
    max-width: var(--container);
    margin: 0 auto;
    padding: 0 var(--pad-x);
  }

  .titlePage {
    font-size: 1.6rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    text-align: center;
    text-wrap: balance;
  }

  /* Tipografía base */
  h1,
  h2,
  h3 {
    margin: 0 0 12px;
    letter-spacing: -0.02em;
    color: var(--text);
  }

  p {
    margin: 0 0 12px;
    color: var(--text-2);
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  /* Card base utilitaria (para tus secciones) */
  .card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    box-shadow: var(--shadow-sm);
  }

  /* Formularios: look minimal */
  label {
    display: block;
    font-size: 0.9rem;
    color: var(--text-2);
    margin-bottom: 8px;
  }

  input,
  select,
  textarea {
    width: 100%;
    background: var(--surface);
    color: var(--text);
    border: 1px solid var(--border);
    border-radius: var(--radius-sm);
    padding: 12px 12px;
    outline: none;
    transition:
      border-color 120ms ease,
      box-shadow 120ms ease,
      background 120ms ease;
  }

  input::placeholder,
  textarea::placeholder {
    color: #94a3b8; /* slate-400 */
  }

  input:focus,
  select:focus,
  textarea:focus {
    border-color: var(--border-2);
    box-shadow: var(--ring);
  }

  button {
    appearance: none;
    border: 1px solid var(--border);
    background: var(--text);
    color: #fff;
    border-radius: var(--radius-sm);
    padding: 12px 14px;
    cursor: pointer;
    transition:
      transform 80ms ease,
      opacity 120ms ease,
      box-shadow 120ms ease,
      background 120ms ease;
    box-shadow: var(--shadow-sm);
  }

  button:hover {
    opacity: 0.92;
  }

  button:active {
    transform: translateY(1px);
  }

  button:focus-visible {
    outline: none;
    box-shadow: var(--ring);
  }

  /* Variante “ghost” para botones secundarios */
  .btn-ghost {
    background: var(--surface);
    color: var(--text);
  }

  /* Accesibilidad */
  :focus-visible {
    outline: none;
    box-shadow: var(--ring);
    border-radius: 10px;
  }

  /* Quitar spinners en number */
  input[type='number']::-webkit-inner-spin-button,
  input[type='number']::-webkit-outer-spin-button {
    appearance: none;
    margin: 0;
  }

  input[type='number'] {
    -moz-appearance: textfield;
  }
</style>
